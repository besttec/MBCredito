{% extends "::base.html.twig" %}

{% block body %}
    {{parent()}}
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-5 column">
                {% for label, flashes in app.session.flashbag.all %}
                    {% for flash in flashes %}
                        <div class="alert alert-dismissable alert-{{ label }}">
                            <button type="button" class="close" data-dismiss="alert">Ã—</button>
                            {{ flash }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <fieldset>
                    <legend>Importar Arquivo</legend>
                    <form role="form" method="post" action="{{ path('saveArquivo') }}" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="arquivo">Arquivo</label>
                            <input type="file" name="arquivo" id="arquivo">
                            <p class="help-block">Importar aquivo do excel</p>
                        </div>
                        <button type="submit" class="btn btn-default">Importar</button>
                    </form>
                </fieldset>
            </div>
        </div>
    </div>
{% endblock %}
