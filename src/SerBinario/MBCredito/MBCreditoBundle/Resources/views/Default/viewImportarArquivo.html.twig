{% extends "::base.html.twig" %}

{% block body %}
    {{parent()}}
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-5 column">
                <fieldset>
                    <legend>Importar Arquivo</legend>
                    <form role="form" method="post" action="{{ path('saveArquivo') }}" {{ form_enctype(form) }}>
                        <div class="form-group">
                            <label for="arquivo">Arquivo</label>
                            <input type="file" name="arquivo" id="arquivo">
                            <p class="help-block">Importar aquivo do excel</p>
                        </div>
                        <button type="submit" class="btn btn-default">Importar</button>
                    </form>
                </fieldset>
            </div>
        </div>
    </div>
{% endblock %}
