{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('css/cs-login.css')}}" />
{% endblock %}

{% block body %}
            
        <body>
            <div class="container">
                <div class="row vertical-offset-100">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">                                
                                <div class="row-fluid user-row">
                                    <center><h2 style="text-shadow: 0.1em 0.1em 0.1em #BBBBBB">MBCRÃ‰DITO</h2></center>
                                    {#<img src="http://s11.postimg.org/7kzgji28v/logo_sm_2_mr_1.png" class="img-responsive" alt="Conxole Admin"/>#}
                                </div>
                            </div>
                            <div class="panel-body">
                                <form accept-charset="UTF-8" role="form" class="form-signin" method="post" action="{{ path('login_check') }}">
                                    {% if error %}
                                            <div>{{ error.message }}</div>
                                        {% endif %}
                                    <fieldset>
                                        <label class="panel-login">
                                            <div class="login_result"></div>
                                        </label>
                                        <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Login" required="" autofocus="" contenteditable="false">
                                        <input type="password" class="form-control" name="_password" placeholder="Senha" required="" contenteditable="false">
                                        <br/><br/>                                       
                                        <input class="btn btn-lg btn-primary btn-block" type="submit" id="Logar" value="Logar">
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </body>
            </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{asset('js/js-login.js')}}"></script>
    <script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
{% endblock %}